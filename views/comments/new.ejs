<%include ../partials/header %>

<div class="container">
	<div class="row">
			<h1 style="text-align: center;">Add New Comment to: <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">	
			<form class="form-horizontal" action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<label>Username:</label>
					<div class="form-control" readonly><%=currentUser.username%></div>
				</div>
				<div class="form-group">
					<label>Comment:</label>
					<textarea class="form-control" rows="6" name="comment[text]" placeholder="Your comment"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Submit</button>
				</div>
			</form>
		</div>
			<a class="btn btn-sm btn btn-default" href="/campgrounds/<%= campground._id %>" title="back"><i class="fas fa-angle-left"></i> Go Back</a>
	</div>		
</div>	
<% include ../partials/footer %>