<%include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Campground</h1>
		<div style="width: 30%; margin: 25px auto;">	
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label>Campground Name:</label>
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<label>Campground Image:</label>
					<input class="form-control" type="text" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<label>Campground Price:</label>
					<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label>Campground Description:</label>
					<textarea class="form-control" rows="6" name="description" placeholder="Description"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Submit</button>
				</div>
			</form>

			<a class="btn btn-sm btn btn-default" href="/campgrounds" title="back"><i class="fas fa-angle-left"></i> Go Back</a>
		</div>
	</div>		

</div>	
<% include ../partials/footer %>