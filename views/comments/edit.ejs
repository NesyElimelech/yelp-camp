<%include ../partials/header %>

<div class="container">
	<div class="row">
			<h1 style="text-align: center;">Edit Comment</h1>
		<div style="width: 30%; margin: 25px auto;">	
			<form class="form-horizontal" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Comment:</label>
					<textarea class="form-control" rows="6" name="comment[text]" placeholder="Your comment"><%=comment.text %></textarea>
				</div>
						<div class="form-group">
							<button class="btn btn-md btn-primary btn-block">Edit</button>
						</div>
			</form>
		</div>
			<a class="btn btn-sm btn btn-default" href="/campgrounds/<%= campground_id %>" title="back"><i class="fas fa-angle-left"></i> Go Back</a>
	</div>		
</div>	
<% include ../partials/footer %>