<%include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1><i class="fas fa-campground"></i> Welcom to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
				<p>
					<a class="btn btn-primary btn-lg" href="/campgrounds/new" title="create_new_campground"><i class="fas fa-plus"></i> Add Campground</a>
				</p>
		</div>
	</header>
				
		<div class="row text-center">
			<div class="card-deck">
				<% campgrounds.forEach((campground)=>{ %>
					<div class="col-lg-3 col-sm-6">	
			 			<div class="card">
							<img src="<%= campground.image %>">
							<div class="caption">
								<h4><%= campground.name%></h4>
							</div>
							<a class="infoButton btn btn-info" href="/campgrounds/<%= campground._id %>" title="">More info <i class="fas fa-chevron-circle-right"></i></a>
						 </div>
					</div>
				<% }) %>
			</div>
		</div>

	<a class="btn btn-default btn-md" href="/" title=""><i class="fas fa-angle-left"></i> Go Back</a>

</div>

<% include ../partials/footer %>